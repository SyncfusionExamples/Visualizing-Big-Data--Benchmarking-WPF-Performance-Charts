<Window x:Class="SfChartBenchmark.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SfChartBenchmark"
        xmlns:chart="clr-namespace:Syncfusion.UI.Xaml.Charts;assembly=Syncfusion.SfChart.WPF"
        mc:Ignorable="d"
        SizeChanged="Window_SizeChanged"
        Title="MainWindow" Height="450" Width="800">

    <Grid Background="#FFFFFF">
        <!-- Left content + right sidebar -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="360"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- HEADER -->
        <Border Grid.Row="0" Grid.Column="0"
                Margin="12,12,12,0" CornerRadius="14"
                Background="#FFF3EE" BorderBrush="#E5864B" BorderThickness="1.3">
            <Grid Margin="16">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="64"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Border Width="64" Height="64" CornerRadius="32" Background="Transparent" BorderThickness="1"
                        VerticalAlignment="Center" HorizontalAlignment="Center">
                    <Path Fill="#FF983E"
                          HorizontalAlignment="Center"
                          VerticalAlignment="Center"
                          RenderTransformOrigin="0.5, 0.5"
                          Data="M8.9679871,26.31601L6.7590027,30.141998 11.177002,30.141998z M2.072998,25.182007L2.072998,26.311005 29.928009,26.311005 29.928009,25.182007z M8.5319824,3.9889832L10.800995,18.005981 12.651001,9.7120056 14.005981,18.570984 16.634003,6.2070007 18.372009,18.570984 20.178986,13.963989 21.533997,18.570984 23.411987,9.743988 25.449005,18.570984 28.007996,11.837982 28.007996,21.303986 4.0859985,21.303986 4.0859985,11.566986 6.9329834,16z M2.072998,1.9049988L2.072998,22.809998 29.928009,22.809998 29.928009,1.9049988z M0,0L32,0 32,32 0,32z">
                        <Path.RenderTransform>
                            <ScaleTransform ScaleX="1.5" ScaleY="1.5"/>
                        </Path.RenderTransform>
                    </Path>
                </Border>
                <StackPanel Grid.Column="1" Margin="14,0,0,0" VerticalAlignment="Center">
                    <TextBlock Text="WPF Charts Performance Benchmark" FontSize="22" FontWeight="SemiBold"/>
                    <TextBlock Text="Benchmark and visualize rendering performance of 1 Million data points using WPF SfCharts."
                               Foreground="#5F6B7A" TextWrapping="Wrap"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- SIDEBAR -->
        <Border Grid.Row="0" Grid.RowSpan="3" Grid.Column="1"
                Margin="12" CornerRadius="18"
                Background="#FFFFFF" BorderBrush="Gray" BorderThickness="1.2" Padding="16">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel>
                    <TextBlock Text="Settings" FontSize="20" FontWeight="SemiBold" Margin="0,0,0,10"/>
                    <Separator Margin="0,0,0,12"/>

                    <TextBlock Text="Series Type" Margin="0,0,0,10" FontSize="16" />
                    <ComboBox SelectedValue="{Binding SelectedSeriesType}"
                              SelectedValuePath="Content"
                              FontSize="14"
                              SelectedIndex="0"
                              Background="#F5F7FA"
                              Foreground="#333"
                              BorderBrush="#D9DFEA"
                              BorderThickness="1"
                              Padding="6"
                              Height="35"
                              HorizontalContentAlignment="Left"
                              VerticalContentAlignment="Center">
                        <ComboBoxItem Content="FastLineSeries"/>
                        <ComboBoxItem Content="FastLineBitmapSeries"/>
                    </ComboBox>

                    <TextBlock Text="Anti-aliasing (Bitmap series only)" Margin="0,15,0,10" FontSize="16" />
                    <TextBlock Text="Anti-aliasing smooths jagged edges in bitmap-rendered charts, improving visual clarity and polish."
                               FontSize="12"
                               Foreground="#555"
                               TextWrapping="Wrap"
                               Margin="0,0,0,12"/>
                    <CheckBox IsChecked="{Binding EnableAA}" Content="Enable Anti-aliasing" FontSize="13" Margin="0,0,0,12">
                        <CheckBox.Style>
                            <Style TargetType="CheckBox">
                                <Setter Property="IsEnabled" Value="True"/>
                                <Setter Property="Opacity" Value="1"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding SelectedSeriesType}" Value="FastLineSeries">
                                        <Setter Property="IsEnabled" Value="False"/>
                                        <Setter Property="Opacity" Value="0.5"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </CheckBox.Style>
                    </CheckBox>

                    <Button Content="Start Benchmarking"
                            Padding="16,10"
                            FontSize="14"
                            Command="{Binding StartBenchmarkCommand}"
                            Background="#E5864B"
                            Foreground="White"
                            FontWeight="SemiBold"
                            BorderThickness="0"
                            Margin="0,10,0,4" />

                    <Button Content="Clear / Reset"
                            Padding="16,10"
                            FontSize="14"
                            Command="{Binding ClearCommand}"
                            Background="#E0E0E0"
                            Foreground="#333"
                            FontWeight="SemiBold"
                            BorderThickness="0"
                            Margin="0,0,0,4" />

                    <Border Margin="0,10,0,0" CornerRadius="8" BorderBrush="#D9DFEA"
                            BorderThickness="1" Background="#FFFFFF" Padding="10">
                        <StackPanel>
                            <TextBlock Text="Dataset" FontWeight="SemiBold"/>
                            <TextBlock Text="10 series × 100,000 points = 1,000,000 points" />
                        </StackPanel>
                    </Border>

                    <Border Margin="0,10,0,0" Background="#E6F4EA" CornerRadius="8" Padding="14">
                        <TextBlock Text="{Binding Status}" TextWrapping="Wrap" FontSize="14" />
                    </Border>
                </StackPanel>
            </ScrollViewer>
        </Border>

        <!-- CHART -->
        <Border Grid.Row="1" Grid.Column="0"
                Margin="12" CornerRadius="18"
                Background="#FFFFFF" BorderBrush="Gray" BorderThickness="1.2"
                MinHeight="320" VerticalAlignment="Stretch">
            <chart:SfChart x:Name="Chart" VerticalAlignment="Stretch" Margin="10">
                <chart:SfChart.PrimaryAxis>
                    <chart:NumericalAxis x:Name="XAxis" FontSize="12" />
                </chart:SfChart.PrimaryAxis>
                <chart:SfChart.SecondaryAxis>
                    <chart:NumericalAxis x:Name="YAxis" FontSize="12" />
                </chart:SfChart.SecondaryAxis>

                <chart:SfChart.Behaviors>
                    <chart:ChartZoomPanBehavior EnablePanning="True" />
                </chart:SfChart.Behaviors>
            </chart:SfChart>
        </Border>

        <!-- BOTTOM BAND -->
        <Expander x:Name="BottomExpander"
                  Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2"
                  Margin="12,0,11,10" Background="Transparent"
                  IsExpanded="True" ExpandDirection="Down">
            <Expander.Header>
                <Border CornerRadius="12" Background="#FFFFFF" BorderBrush="Transparent" BorderThickness="1" Padding="10,3,10,3">
                    <TextBlock Text="Toggle Section" />
                </Border>
            </Expander.Header>

            <Border CornerRadius="18" Background="#FFFFFF" BorderBrush="Gray" BorderThickness="1.2" Padding="12">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="7*"/>
                        <ColumnDefinition Width="3*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Performance metrics -->
                    <Border Grid.Column="0" CornerRadius="12"
                            BorderThickness="0" Padding="12" Margin="0,0,12,0">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="4.5*"/>
                                <ColumnDefinition Width="5.5*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <TextBlock Text="Performance Metrics" FontWeight="SemiBold" FontSize="18" Grid.ColumnSpan="2" Margin="0,0,0,8"/>

                            <StackPanel Grid.Row="1" Grid.Column="0">
                                <TextBlock Text="Initial Load" FontSize="14" FontWeight="SemiBold"/>
                                <TextBlock Text="{Binding LoadMetricsText}" FontSize="13" Margin="0,2,0,10"/>
                                <TextBlock Text="Pan/Scroll" FontSize="14" FontWeight="SemiBold"/>
                                <TextBlock Text="{Binding PanMetricsText}" FontSize="13" Margin="0,2,0,10"/>
                                <TextBlock Text="Zooming" FontSize="14" FontWeight="SemiBold"/>
                                <TextBlock Text="{Binding ZoomMetricsText}" FontSize="13" Margin="0,2,0,0"/>
                            </StackPanel>

                            <StackPanel Grid.Row="1" Grid.Column="1">
                                <TextBlock Text="UI Responsiveness (avg frame time)" FontSize="14" FontWeight="SemiBold"/>
                                <TextBlock Text="{Binding UiRespMetricsText}" TextWrapping="Wrap" FontSize="13" Margin="0,2,0,10"/>
                                <TextBlock Text="Memory Usage" FontSize="14" FontWeight="SemiBold"/>
                                <TextBlock Text="{Binding MemoryMetricsText}" FontSize="13" Margin="0,2,0,0"/>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <Border Grid.Column="1" CornerRadius="12" Background="#E0E0E0" Padding="12">
                        <ScrollViewer VerticalScrollBarVisibility="Auto">
                            <StackPanel>
                                <TextBlock Text="Sparklines (last 10 runs)" FontSize="14" FontWeight="SemiBold" Margin="0,0,0,10"/>

                                <Border Background="#FFFFFF" CornerRadius="8" Padding="8" Margin="0,0,0,8">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="160"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Text="Load" FontSize="13" VerticalAlignment="Center"/>
                                        <chart:SfLineSparkline Grid.Column="1"
                                                               ItemsSource="{Binding LoadHistory}"
                                                               Interior="#FF8E2C" StrokeThickness="2"
                                                               Height="44" HorizontalAlignment="Stretch"/>
                                    </Grid>
                                </Border>

                                <Border Background="#FFFFFF" CornerRadius="8" Padding="8" Margin="0,0,0,8">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="140"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Text="UI Responsiveness" FontSize="13" VerticalAlignment="Center"/>
                                        <chart:SfLineSparkline Grid.Column="1"
                                                               ItemsSource="{Binding UIRespHistory}"
                                                               Interior="#FF8922" StrokeThickness="2"
                                                               Height="44" HorizontalAlignment="Stretch">
                                            <chart:SfLineSparkline.LayoutTransform>
                                                <ScaleTransform ScaleY="-1" />
                                            </chart:SfLineSparkline.LayoutTransform>
                                        </chart:SfLineSparkline>
                                    </Grid>
                                </Border>
                            </StackPanel>
                        </ScrollViewer>
                    </Border>
                </Grid>
            </Border>
        </Expander>
    </Grid>
</Window>
